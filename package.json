{
  "name": "dam-it",
  "version": "0.30",
  "description": "A vue chat app to practice my experience with sockets",
  "main": "main.js",
  "scripts": {
    "start": "node ./dist/main.js",
    "build": "tsc -p .",
    "dev": "nodemon ./src/main.ts",
    "test": "jest --verbose --watchAll"
  },
  "author": "daneric,mart,milan",
  "license": "ISC",
  "dependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^14.14.25",
    "dotenv": "^16.0.3",
    "express": "^4.17.1",
    "nodemon": "^2.0.7",
    "socket.io": "^4.6.1",
    "ts-node": "^9.1.1",
    "typescript": "^5.0.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.0.5"
  },
  "jest": {
    "preset": "ts-jest",
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "testEnvironment": "node",
    "moduleDirectories": [
      "node_modules"
    ],
    "verbose": true,
    "clearMocks": true,
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ]
  }
}
